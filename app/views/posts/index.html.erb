<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4">
      <div class="card-deck mb-4">
        <div class="card" style="height: 400px;">
          <%= image_tag post.image, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text">
              <%= truncate(post.description, length: 100) %>
              <%= link_to "讀更多", post_path(post), class: "badge badge-primary" %>
            </p>
          </div>
          <div class="card-footer">
            <small class="text-muted"><%= time_ago_in_words(post.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>