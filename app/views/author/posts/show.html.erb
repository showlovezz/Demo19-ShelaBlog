<div class="container mt-4">
  <div class="row">

    <div class="col-md-5">
      <%= image_tag @post.image, class: "img-thumbnail" %>
      <p><%= simple_format @post.description %></p>
    </div>

    <div class="col-md-7">
      <h2><%= @post.title %></h2>
      <hr>
      <p class="lead"><%= @post.body.html_safe %></p>
    </div>

  </div>
</div>