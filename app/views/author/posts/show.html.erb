<div class="container mt-4">
  <div class="row">

    <div class="col-md-5">
      <%= image_tag @post.image, class: "img-thumbnail" %>
    </div>

    <div class="col-md-7">
      <h2><%= @post.title %></h2>
      <hr>
      <p class="lead size"><%= @post.body.html_safe %></p>
      <br>
      <p><%= @post.description %></p>
    </div>

  </div>
</div>