<%= link_to '新增日記', new_author_post_path, class: "btn btn-dark mb-2" %>

<table class="table table-striped">
  <caption>List of Posts</caption>
  <thead class="thead-dark">
    <tr>
      <th scope="col">編號</th>
      <th scope="col">標題</th>
      <th scope="col">預覽</th>
      <th scope="col">編輯</th>
      <th scope="col">刪除</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td>
          <%= link_to author_post_path(post) do %>
            <i class="fa fa-eye text-muted"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_author_post_path(post) do %>
            <i class="fas fa-pencil-alt text-muted"></i>
          <% end %>
        </td>
        <td>
          <%= link_to author_post_path(post),method: :delete, data: {confirm: "Are you sure?"} do %>
            <i class="fab fa-expeditedssl text-danger"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
