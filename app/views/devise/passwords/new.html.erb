<div class="col-md-6 offset-md-3 mt-4">
  <div class="card">
    <div class="card-header display-4 text-center">忘記密碼了嗎?
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <div class="form-group mb-0">
            <%= f.label :email, "Email：" %>
            <%= f.email_field :email, class: "form-control form-color" ,autofocus: true, autocomplete: "email" %>
          </div>
        </li>
        <li class="list-group-item">
          <div class="form-group actions mt-3">
            <%= f.submit "Send me reset password instructions", class: "btn btn-success btn-lg btn-block" %>
          </div>
        </li>
        <li class="list-group-item">
          <div class="form-group actions mt-0 mb-0">
            <%= render "devise/shared/links" %>
          </div>
        </li>
      </ul>
    <% end %>
  </div>
</div>






